<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:ignore="NamespaceTypo">
    <data>
        <variable
            name="article"
            type="com.example.articlesapp.database.ArticleEntity"/>
        <variable
            name="adapter"
            type="com.example.articlesapp.view.ArticleAdapter"/>
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        card_view:cardElevation="5dp"
        card_view:contentPadding="5dp"
        app:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    android:src="@mipmap/ic_launcher_round"
                    />
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@{article.name}"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    card_view:layout_constraintLeft_toRightOf="@id/userImage"
                    card_view:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/createdAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@{article.createdAt}"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/userDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@{article.designation}"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    card_view:layout_constraintLeft_toRightOf="@id/userImage"
                    card_view:layout_constraintTop_toBottomOf="@id/userName"/>

                <ImageView
                    android:id="@+id/articleImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    card_view:layout_constraintTop_toBottomOf="@id/userImage"
                    android:src="@mipmap/ic_launcher"
                    />

                <TextView
                    android:id="@+id/articleContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@{article.content}"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/articleImage"/>

                <TextView
                    android:id="@+id/articleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@{article.title}"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/articleContent"/>

                <TextView
                    android:id="@+id/articleUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@{article.articleUrl}"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/articleTitle"/>

                <TextView
                    android:id="@+id/articleLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@{String.valueOf(article.likes) + ` Likes`}"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/articleUrl"/>

                <TextView
                    android:id="@+id/articleComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="@{String.valueOf(article.comments) + ` Comments`}"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@id/articleUrl"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</layout>